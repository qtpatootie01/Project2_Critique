{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Worldwide Life Expectancy 2014",
  "width": 1000,
  "height": 600,
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "data": {"sphere": true},
      "mark": {"type": "geoshape", "fill": "lightskyblue"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/qtpatootie01/Homework_LifeExpectancy/main/ne_110m.json",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "lightslategray"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/qtpatootie01/Homework_LifeExpectancy/main/ne_110m.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "NoData"
        }
      ],
      "encoding": {"tooltip": {"field": "NoData"}}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/qtpatootie01/Homework_LifeExpectancy/main/ne_110m.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/qtpatootie01/Homework_LifeExpectancy/main/LifeExpectancy2014.csv"
            },
            "key": "Country",
            "fields": ["Life_expectancy", "Population"]
          }
        },
        {
          "calculate": "datum.Life_expectancy/datum.Population*1000000",
          "as": "Life Expectancy"
        }
      ],
      "mark": {"type": "geoshape", "stroke": "lightslategray"},
      "encoding": {
        "color": {
          "field": "Life Expectancy",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [1, 10, 100, 1000, 10000],
            "range": [
              "#fdbe85",
              "#fd8d3c",
              "#e6550d",
              "#a63603",
              "#792600",
              "#591C01"
            ]
          },
          "legend": {
            "direction": "horizontal",
            "orient": "bottom",
            "titleLimit": 1000
          }
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {
            "field": "Life Expectancy",
            "type": "quantitative",
            "format": ".2f",
            "title": "Life Expectancy per million population"
          }
        ]
      }
    }
  ]
}